<h1>Ideas</h1>

<% @ideas.each do |idea| %>
<div class="row">
  <div class="span4">
    <a href="<%=url_for idea%>">
    <%= image_tag idea.picture_url, :width => '100%' if idea.picture.present?%> </a>
    <h4><%= link_to idea.name, idea %></h4>
    <%= idea.description %>
  </div>
<% end %>

